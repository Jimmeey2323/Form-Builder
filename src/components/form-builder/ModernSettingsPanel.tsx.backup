            label="Background" 
            value={form.theme?.backgroundColor || '#ffffff'} 
            onChange={(color) => onUpdate({ theme: { ...form.theme, backgroundColor: color } })}
          />
          <ColorInput 
            label="Text Color" 
            value={form.theme?.textColor || '#1f2937'} 
            onChange={(color) => onUpdate({ theme: { ...form.theme, textColor: color } })}
          />
        </CardContent>
      </Card>
    </div>
  );
}

